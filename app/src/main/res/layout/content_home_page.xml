<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.appsinventiv.classifiedads.Activities.HomePage"
    tools:showIn="@layout/app_bar_home_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewCategory"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="2dp">


                    <include
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        layout="@layout/home_categories"
                        />



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_big_ad"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_below="@id/cardViewCategory"
                android:layout_margin="3dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bigad"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bigad" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/featured" />
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bigad"
                        android:padding="5dp"
                        android:text="Honda Civic for sale"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView3"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:text="Rs 27,90,000"
                        android:textColor="@color/colorPrimary" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/mobileeee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView_big_ad"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="Mobiles"
                android:textColor="#000"
                android:textSize="20dp" />

            <ProgressBar
                android:id="@+id/pBar"
                android:layout_below="@id/mobileeee"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
            </ProgressBar>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ads_recyclerview_mobiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_below="@id/mobileeee" />


            <ImageView
                android:id="@+id/bannerad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ads_recyclerview_mobiles"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/bannerad" />

            <TextView
                android:id="@+id/carssss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bannerad"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Cars"
                android:textColor="#000"
                android:textSize="20dp" />

            <ProgressBar
                android:id="@+id/pBar1"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/carssss"
                android:layout_height="wrap_content">
            </ProgressBar>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/ads_recyclerview_cars"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_below="@+id/carssss" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
